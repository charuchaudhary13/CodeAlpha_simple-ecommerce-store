<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>All Products</title>

  <!-- Bootstrap & AOS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

  <!-- Dark Mode (optional) -->
  <style>
    body.dark-mode {
      background-color: #121212;
      color: #ffffff;
    }

    .dark-mode .navbar,
    .dark-mode footer {
      background-color: #1f1f1f !important;
    }

    .product-card {
      border: 1px solid #ccc;
      border-radius: 10px;
      padding: 15px;
      text-align: center;
      height: 100%;
      background-color: #fff;
      transition: box-shadow 0.3s;
    }

    .dark-mode .product-card {
      background-color: #1e1e1e;
      color: #f8f9fa;
      border-color: #444;
    }

    .product-card:hover {
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .product-card img {
      max-width: 100%;
      height: 200px;
      object-fit: cover;
      margin-bottom: 10px;
      border-radius: 5px;
    }

    .btn-success {
      width: 100%;
    }
  </style>
</head>
<body style="background-color: #f8f9fa;">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">üõí MyShop</a>
      <div class="d-flex align-items-center gap-2">
        <a href="/cart" class="btn btn-outline-light position-relative">
          Cart
          <% if (cart && cart.items.length > 0) { %>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              <%= cart.items.reduce((total, item) => total + item.quantity, 0) %>
            </span>
          <% } %>
        </a>
        <button onclick="toggleDarkMode()" class="btn btn-sm btn-outline-light">üåì</button>
      </div>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container mt-4">
    <h1 class="mb-4 text-center">üõçÔ∏è All Products</h1>

    <!-- Search & Filter -->
    <form class="row g-3 mb-4" method="GET" action="/">
      <div class="col-md-6">
        <input type="text" class="form-control" name="search" value="<%= search %>" placeholder="Search products..." />
      </div>
      <div class="col-md-4">
        <select class="form-select" name="category">
          <option value="">All Categories</option>
          <% categories.forEach(cat => { %>
            <option value="<%= cat %>" <%= selectedCategory === cat ? 'selected' : '' %>><%= cat %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
      </div>
    </form>

    <!-- Product Grid -->
    <% if (products.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% products.forEach(product => { %>
          <div class="col">
            <div class="product-card h-100 shadow-sm" data-aos="fade-up">
              <img src="<%= product.image %>" alt="<%= product.title %>" />
              <h5><%= product.title %></h5>
              <p><strong>‚Çπ <%= product.price %></strong></p>
              <p><%= product.description %></p>
              <p><em>Category: <%= product.category %></em></p>
              <form action="/add-to-cart/<%= product._id %>" method="POST">
                <button type="submit" class="btn btn-success">Add to Cart</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-warning text-center" role="alert">
        üò¢ No products match your search or category.
      </div>
    <% } %>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-light text-center py-3 mt-5">
    <div class="container">
      <p class="mb-0">¬© <%= new Date().getFullYear() %> MyShop. All rights reserved.</p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
  <script>
    AOS.init();
    function toggleDarkMode() {
      document.body.classList.toggle('dark-mode');
    }
  </script>
</body>
</html>
