<!DOCTYPE html>
<html>
<head>
  <title>Your Cart</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">üõí MyShop</a>
      <div class="d-flex">
        <a href="/cart" class="btn btn-outline-light position-relative">
          Cart
          <% if (cart && cart.items.length > 0) { %>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              <%= cart.items.reduce((total, item) => total + item.quantity, 0) %>
            </span>
          <% } %>
        </a>
      </div>
    </div>
  </nav>

  <!-- Cart Section -->
  <div class="container mt-5" data-aos="fade-up">
    <h1 class="mb-4 text-center">üõí Your Cart</h1>

    <% if (cart && cart.items.length > 0) { let total = 0; %>
      <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered align-middle text-center">
          <thead class="table-dark">
            <tr>
              <th>Product</th>
              <th>Price (‚Çπ)</th>
              <th>Quantity</th>
              <th>Total (‚Çπ)</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% cart.items.forEach(item => {
              const itemTotal = item.quantity * item.productId.price;
              total += itemTotal;
            %>
              <tr>
                <td><%= item.productId.title %></td>
                <td><%= item.productId.price %></td>
                <td>
                  <div class="d-flex justify-content-center align-items-center">
                    <form action="/cart/update/<%= item.productId._id %>" method="POST" class="me-1">
                      <input type="hidden" name="action" value="decrease">
                      <button type="submit" class="btn btn-sm btn-outline-secondary fw-bold">‚àí</button>
                    </form>
                    <span class="mx-2 fw-bold"><%= item.quantity %></span>
                    <form action="/cart/update/<%= item.productId._id %>" method="POST" class="ms-1">
                      <input type="hidden" name="action" value="increase">
                      <button type="submit" class="btn btn-sm btn-outline-secondary fw-bold">+</button>
                    </form>
                  </div>
                </td>
                <td><%= itemTotal %></td>
                <td>
                  <form action="/cart/remove/<%= item.productId._id %>" method="POST">
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                  </form>
                </td>
              </tr>
            <% }) %>
            <tr class="table-secondary">
              <td colspan="3" class="text-end"><strong>Total:</strong></td>
              <td colspan="2"><strong>‚Çπ <%= total %></strong></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info text-center" data-aos="fade-up">Your cart is empty.</div>
    <% } %>

    <div class="text-center mt-4">
      <a href="/" class="btn btn-primary">‚Üê Back to Home</a>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
  <script>AOS.init();</script>
</body>
</html>
